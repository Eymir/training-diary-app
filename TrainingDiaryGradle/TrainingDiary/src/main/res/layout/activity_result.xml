<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="?backgroundRef">

    <LinearLayout
        android:id="@+id/measure_layout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/write_button"
            style="?hugeSpecificButtonRef"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/write_button_text"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            style="?hugeSpecificButtonRef"
            android:id="@+id/undo_button"
            android:src="@drawable/undo_white_big" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <TextView
            android:id="@+id/cur_training_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1" />
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/mChrono"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="27dp"
            android:onClick="onClickTimer"
            android:clickable="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/history_result_button"
            android:text="@string/history_action"
            style="?hugeSpecificButtonRef"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>