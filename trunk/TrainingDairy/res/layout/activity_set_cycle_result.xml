<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SetPowerResultActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvNameEx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TextView"
            android:textColor="#F8F8FF"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Расстояние (км):"
            android:textColor="#F8F8FF"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnW1p"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:text="+"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextW1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:textSize="20sp" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/btnW1m"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="-"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnW2p"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:text="+"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextW2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnW2m"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:text="-"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnW3p"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:text="+"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextW3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnW3m"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:text="-"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnW4p"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:text="+"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:textSize="25sp" />

                    <EditText
                        android:id="@+id/editTextW4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnW4m"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:text="-"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout4" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnRepp"
                android:layout_width="118dp"
                android:layout_height="45dp"
                android:text="+"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextRep"
                android:layout_width="118dp"
                android:layout_height="40dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnRepm"
                android:layout_width="118dp"
                android:layout_height="45dp"
                android:text="-"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Записать"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время (минуты):"
            android:textColor="#F8F8FF"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvEndedRep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>