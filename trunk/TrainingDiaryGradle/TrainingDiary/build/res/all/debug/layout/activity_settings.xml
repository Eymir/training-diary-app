<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_blue"
                android:paddingLeft="3dp"
                tools:context=".SettingsActivity">

    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tvCountEx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12.51"
                android:text="@string/count_ex"
                android:textColor="#F8F8FF"/>

        <TextView
                android:id="@+id/tvCountTr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12.51"
                android:text="@string/count_tr"
                android:textColor="#F8F8FF"/>

        <TextView
                android:id="@+id/tvCountHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:text="@string/count_tr_stat"
                android:textColor="#F8F8FF"/>

        <Button
                android:id="@+id/backup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/backup_button_text"
                android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout><!-- From: file:/C:/Users/Lenovo/ANDROID/trunk/TrainingDiaryProject/TrainingDiary/src/main/res/layout/activity_settings.xml -->