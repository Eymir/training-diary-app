<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/old_lace">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:onClick="clickPreviousResult">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_action_previous_item" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="false">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправить открытку"
            android:id="@+id/button"
            android:background="@drawable/btn_states_blue"
            android:layout_centerInParent="true"
            android:onClick="sendOrderWithPurchase" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправить за бабки"
            android:id="@+id/button2"
            android:background="@color/holo_blue_dark"
            android:layout_marginTop="10dp"
            android:onClick="sendOrderWithoutPurchase"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>