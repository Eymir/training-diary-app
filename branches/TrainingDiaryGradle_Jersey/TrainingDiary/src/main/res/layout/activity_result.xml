<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="?backgroundRef">

    <TextView
        android:id="@+id/last_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/last_result"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:id="@+id/measure_layout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/write_button"
            style="?hugeSpecificButtonRef"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/write_button_text"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            style="?hugeSpecificButtonRef"
            android:id="@+id/undo_button"
            android:src="@drawable/undo_white_big" />
    </LinearLayout>


    <TextView
        android:id="@+id/cur_training_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>
